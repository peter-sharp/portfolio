{
    "name": "peter-sharp-portfolio",
    "version": "1.0.0",
    "description": "My portfolio using github as a backend",
    "main": "js/bundle.js",
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "eleventy --serve",
        "test": "echo \"Error: no test specified\" && exit 1",
        "make": "run-p make:*",
        "make:images": "npm-run-all -s images",
        "make:eleventy": "eleventy",
        "make:lambda": "netlify functions:build --src=functions/",
        "image-folders:thumbnail": "shx mkdir -p ./_site/uploads/sizes/thumbnail",
        "image-folders:small": "shx mkdir -p ./_site/uploads/sizes/small",
        "image-folders:medium": "shx mkdir -p ./_site/uploads/sizes/medium",
        "image-folders:large": "shx mkdir -p ./_site/uploads/sizes/large",
        "images": "npm-run-all -s image-folders:* images:*",
        "images:thumbnail": "sharp -i \"./src/site/uploads/**/*.{jpg,png,gif}\" -o \"./_site/uploads/sizes/thumbnail\" resize 324 --fit=inside",
        "dev": "pnpx run-p dev:*",
        "dev:lambda": "pnpx netlify dev"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/peter-sharp/peter-sharp-portfolio.git"
    },
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/peter-sharp/peter-sharp-portfolio/issues"
    },
    "homepage": "https://github.com/peter-sharp/peter-sharp-portfolio#readme",
    "devDependencies": {
        "@11ty/eleventy": "^1.0.1",
        "@oclif/errors": "^1.2.2",
        "@octokit/core": "^3.1.4",
        "@octokit/endpoint": "^5.5.1",
        "@octokit/rest": "^16.38.3",
        "babel-core": "^6.26.0",
        "babel-loader": "^7.1.2",
        "date-fns": "^2.15.0",
        "date-fns-tz": "^1.0.10",
        "dotenv": "^8.2.0",
        "eleventy-plugin-svg-contents": "^0.7.0",
        "front-matter": "^2.3.0",
        "js-yaml": "^3.13.1",
        "mime-types": "^2.1.26",
        "netlify-cli": "^2.30.0",
        "netlify-redirector": "^0.1.0",
        "npm-run-all": "^4.1.5",
        "outdent": "0.7.1",
        "sharp": "^0.25.2",
        "sharp-cli": "^1.13.1",
        "shx": "^0.3.2",
        "slugify": "^1.3.6",
        "typescript": "^3.7.2"
    },
    "dependencies": {
        "choo": "^6.5.1",
        "nanocomponent": "^6.4.2"
    }
}
